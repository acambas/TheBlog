@model WebUi.Models.Blog.PostViewModel

<article class=" text-center">
    <header>
        <h2>@Model.Title<br><small>@Model.PostedOn.ToString("dd MMM yyyy")</small></h2>
        <img class="img-responsive img-border img-full" src="~/img/blog-3.jpg" />
    </header>
    <br />
    <section>
        <p>@Html.Raw(Model.ShortDescription)</p>
    </section>
    <div class="post-footer">
        <a href="@Url.RouteUrl("ViewPost", new { id = Model.UrlSlug })" class="btn btn-default btn-lg">Read More</a>
        <br />
        @foreach (var item in Model.Tags)
        {
            <a href="@Url.Action("FilterByTag", "Blog", new { id = @item.Name , name=@item.Name})">
                <i class="fa fa-tag"></i>
                @item.Name
            </a>
        }
        <hr>
    </div>
    <br />
</article>
