<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Tables - SB Admin</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <!-- Add custom CSS here -->
    <link href="~/Content/sb-admin.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    @RenderSection("css", required: false)

    <!-- JavaScript -->
    <script src="~/Scripts/jquery-2.0.3.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("headscripts", required: false)
    <!-- /JavaScript -->
</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home", new { Area =""})">Blog Admin</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li> 
                    <a href="@Url.Action("Index", "Account", new { Area = "Admin" })">
                        <i class="fa fa-users" ></i>Users</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Post", new { Area = "Admin" })">
                            <i class="fa fa-file-text-o"></i>Posts
                        </a>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right navbar-user">
                    @Html.Partial("_LoginAdminPartial")
                    
                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">
            @RenderBody()
        </div><!-- /#page-wrapper -->

    </div><!-- /#wrapper -->
    <!-- JavaScript -->
    <script>
        window.rootUrl = "@Url.Content("~/")";
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>


