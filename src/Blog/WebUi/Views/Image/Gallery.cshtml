@model IEnumerable<string>

@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<section class="box row">
    <h2 class="text-center">Gallery</h2>

    @foreach (var id in Model)
{
    <div class="col-md-4">
        <img class=" img-responsive img-border img-thumbnail" src="@Url.Action("Image", "Image", new { id = id })" alt="No Image" />
        <h4 class="text-center">Image URL</h4>
        <p>
            @Url.Action("Image", "Image", new { id = id })
        </p>
    </div>
}
</section>