@model WebUi.Models.Blog.PostViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.ImageId == null)
{
    Model.ImageId = "blog";
}
<div class="row box">
    <div class=" col-lg-12 " id="posts">
        <div class=" ">
            <h2 class="text-center">
                @Model.Title
                <br>
                <small>
                    <i class="fa fa-calendar"></i> @Model.PostedOn.ToString("dd MMM yyyy")
                    @foreach (var item in Model.Tags)
                    {
                        <a href="@Url.RouteUrl("PostsByTag", new { tag = item.UrlSlug })">
                            <i class="fa fa-tag"></i>
                            @item.Name
                        </a>
                    }
                </small>
            </h2>

            <img class="img-responsive img-border img-full" src="@Url.Action("Image","Blog",new {id = Model.ImageId})" alt="No Image" style="height:600px;" />
            <br />
            <br />
            @Html.Raw(Model.Description)
            <hr>
        </div>
    </div>
</div>
